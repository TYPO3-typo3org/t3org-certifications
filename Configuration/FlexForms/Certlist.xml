<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Views</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>View</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">List</numIndex>
                                        <numIndex index="1">Listing->list;Listing->listSorted;Listing->show</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">Detail</numIndex>
                                        <numIndex index="1">Listing->show</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>
                    <settings.singlePid>
                        <TCEforms>
                            <label>PID for Detail-Page</label>
                            <config>
                                <type>input</type>
                                <renderType>inputLink</renderType>
                                <eval>trim</eval>
                                <wizards type="array">
                                    <_PADDING>2</_PADDING>
                                    <link type="array">
                                        <type>popup</type>
                                        <title>Link</title>
                                        <icon>link_popup.gif</icon>
                                        <fieldControl>
                                            <linkPopup>
                                                <options>
                                                    <blindLinkOptions>mail,spec,file,folder,url</blindLinkOptions>
                                                </options>
                                            </linkPopup>
                                        </fieldControl>
                                    </link>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.singlePid>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>